{
  "name": "Claude Company System Configuration",
  "description": "Configuration template for Claude Code CLI in the Claude Company System",
  "version": "2.0.0",
  "environments": [
    {
      "name": "production",
      "settings": {
        "model": "claude-3-5-sonnet-20241022",
        "maxTokens": 8192,
        "temperature": 0.1,
        "systemMessage": "You are a professional AI development assistant working as part of the Claude Company System. You focus on writing clean, well-documented, and maintainable code. Always follow the project's coding standards and architectural patterns.",
        "timeoutMs": 120000,
        "retryAttempts": 3,
        "workspaceSettings": {
          "gitIntegration": true,
          "autoSave": true,
          "linting": true,
          "formatting": true
        }
      }
    },
    {
      "name": "development", 
      "settings": {
        "model": "claude-3-5-sonnet-20241022",
        "maxTokens": 8192,
        "temperature": 0.2,
        "systemMessage": "You are a development AI assistant. You can be more experimental and verbose in your responses. Explain your reasoning and provide detailed comments in code.",
        "timeoutMs": 180000,
        "retryAttempts": 5,
        "workspaceSettings": {
          "gitIntegration": true,
          "autoSave": false,
          "linting": true,
          "formatting": true,
          "debugMode": true,
          "verboseLogging": true
        }
      }
    }
  ],
  "tools": {
    "enabled": [
      "bash",
      "read",
      "write", 
      "edit",
      "glob",
      "grep"
    ],
    "permissions": {
      "fileSystem": {
        "read": ["**/*"],
        "write": ["src/**/*", "tests/**/*", "docs/**/*", "config/**/*"],
        "exclude": [".env", "*.key", "*.pem", "node_modules/**/*"]
      },
      "bash": {
        "allowedCommands": [
          "npm", "yarn", "pnpm",
          "git", 
          "docker", "docker-compose",
          "node", "ts-node",
          "jest", "vitest",
          "eslint", "prettier", "tsc"
        ],
        "restrictedPaths": ["/", "/etc", "/usr", "/bin", "/sbin"],
        "timeoutMs": 30000
      }
    }
  },
  "projectSettings": {
    "workspaceRoot": "/workspace",
    "gitSettings": {
      "autoCommit": false,
      "commitMessageTemplate": "feat: {description}\n\nðŸ¤– Generated with Claude Code\n\nCo-Authored-By: Claude <noreply@anthropic.com>",
      "branchPrefix": "feature/claude-",
      "requirePullRequest": true
    },
    "codeStyle": {
      "language": "typescript",
      "linter": "eslint",
      "formatter": "prettier",
      "testFramework": "jest"
    }
  },
  "logging": {
    "level": "info",
    "outputs": [
      {
        "type": "file",
        "path": "/workspace/logs/claude-cli.log",
        "maxSize": "10MB",
        "maxFiles": 5
      },
      {
        "type": "console",
        "format": "pretty"
      }
    ]
  },
  "integrations": {
    "mcp": {
      "enabled": true,
      "servers": [
        {
          "name": "filesystem",
          "command": "npx",
          "args": ["@modelcontextprotocol/server-filesystem", "/workspace"]
        },
        {
          "name": "git",
          "command": "npx", 
          "args": ["@modelcontextprotocol/server-git", "/workspace"]
        }
      ]
    },
    "websocket": {
      "enabled": true,
      "endpoint": "ws://localhost:8000/ws/claude",
      "reconnectAttempts": 5,
      "heartbeatInterval": 30000
    }
  },
  "security": {
    "allowedHosts": [
      "localhost",
      "127.0.0.1", 
      "api.anthropic.com"
    ],
    "rateLimiting": {
      "requestsPerMinute": 60,
      "tokensPerMinute": 100000
    },
    "sanitization": {
      "removeSecrets": true,
      "maskPatterns": [
        "sk-ant-[a-zA-Z0-9\\-_]+",
        "\\b[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\\.[A-Z|a-z]{2,}\\b",
        "\\b(?:\\d{1,3}\\.){3}\\d{1,3}\\b"
      ]
    }
  }
}