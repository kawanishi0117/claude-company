{
  "name": "claude-company-system",
  "version": "1.0.0",
  "description": "Hierarchical AI development system with Claude Code CLI",
  "main": "src/index.ts",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "ai",
    "claude",
    "docker",
    "typescript",
    "automation"
  ],
  "author": "Claude Company System",
  "license": "MIT",
  "devDependencies": {
    "@types/bull": "^3.15.9",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.0",
    "@types/uuid": "^9.0.4",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "ioredis": "^5.6.1",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "bull": "^4.11.3",
    "express": "^4.18.2",
    "redis": "^4.6.8",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/*.test.ts"
    ]
  }
}
